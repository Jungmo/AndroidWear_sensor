<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jungmo.WearSensor.MainActivity"
    tools:deviceIds="wear_round">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/btn_start"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_stop"
        android:layout_margin="14dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/btn_stop"
        android:layout_marginRight="34dp"
        android:layout_alignTop="@+id/btn_start"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heartTEXT"
        android:textSize="35dp"
        android:text="HR"
        android:textAlignment="center"
        android:layout_below="@+id/btn_stop"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acc"
        android:layout_below="@+id/heartTEXT"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ori"
        android:layout_below="@+id/acc"
        android:layout_alignStart="@+id/btn_start"
        android:layout_alignEnd="@+id/btn_stop" />


</RelativeLayout>